{
    "private": false,
    "name": "@actions-rs-plus/core",
    "version": "0.1.8",
    "author": "actions-rs-plus",
    "license": "MIT",
    "description": "Core functionality for the @actions-rs-plus repos",
    "main": "dist/core.js",
    "typings": "dist/core.d.ts",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "lint": "eslint src --ext=ts,tsx",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "clean": "rm -rf ./dist/* && rm tsconfig.tsbuildinfo && npm run build",
        "test": "jest --watchAll",
        "test:ci": "jest",
        "deps:ci": "depcruise --output-type err src",
        "deps:graph": "depcruise --output-type dot src | dot -T svg > dependency-graph.svg",
        "deps:report": "depcruise --output-type err-html --output-to dependency-report.html src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs-plus/core.git"
    },
    "bugs": {
        "url": "https://github.com/actions-rs-plus/core/issues"
    },
    "devDependencies": {
        "@actions/cache": "^3.2.1",
        "@actions/core": "^1.10.0",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^5.1.1",
        "@actions/io": "^1.1.3",
        "@actions/tool-cache": "^2.0.1",
        "@octokit/graphql": "^5.0.5",
        "@octokit/rest": "^19.0.13",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.3",
        "@types/semver": "^7.5.0",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.60.0",
        "dependency-cruiser": "^12.12.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-junit": "^15.0.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "semver": "^7.5.2",
        "ts-jest": "^29.1.0",
        "typescript": "^4.9.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run test:lint:fix",
            "depcruise --validate -- "
        ]
    }
}
