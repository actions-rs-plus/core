{
    "private": false,
    "name": "@actions-rs-plus/core",
    "version": "0.0.0",
    "author": "actions-rs-plus",
    "license": "MIT",
    "description": "Core functionality for the @actions-rs-plus repos",
    "main": "dist/core.js",
    "typings": "dist/core.d.ts",
    "type": "module",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "watch": "tsc --project . --watch",
        "lint": "biome format && biome lint",
        "lint:fix": "biome format --fix && biome lint --fix",
        "lint:ci": "biome ci",
        "prettier": "prettier --write .",
        "clean": "rm -rf ./dist/* && rm tsconfig.tsbuildinfo && npm run build",
        "test": "vitest --coverage.enabled=true",
        "deps:ci": "depcruise --output-type err src",
        "deps:graph": "depcruise --output-type dot src | dot -T svg > dependency-graph.svg",
        "deps:report": "depcruise --output-type err-html --output-to dependency-report.html src",
        "postversion": "cp package.json package-lock.json ..",
        "release": "semantic-release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs-plus/core.git"
    },
    "bugs": {
        "url": "https://github.com/actions-rs-plus/core/issues"
    },
    "devDependencies": {
        "@types/node": "20.14.15",
        "@types/semver": "7.5.8",
        "@vitest/coverage-v8": "2.0.4",
        "@vitest/ui": "2.0.4",
        "biome": "0.3.3",
        "conventional-changelog-conventionalcommits": "8.0.0",
        "dependency-cruiser": "16.3.10",
        "husky": "9.1.1",
        "lint-staged": "15.2.7",
        "prettier": "3.3.3",
        "semantic-release": "24.0.0",
        "typescript": "5.5.3",
        "vite-tsconfig-paths": "4.3.2",
        "vitest": "2.0.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run lint:fix",
            "depcruise --validate -- "
        ]
    },
    "dependencies": {
        "@actions/cache": "^3.2.4",
        "@actions/core": "^1.10.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "6.0.0",
        "@actions/http-client": "^2.2.1",
        "@actions/io": "^1.1.3",
        "@actions/tool-cache": "^2.0.1",
        "@biomejs/biome": "1.8.3",
        "semver": "^7.6.3"
    },
    "overrides": {}
}
