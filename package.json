{
    "private": false,
    "name": "@actions-rs-plus/core",
    "version": "0.0.0",
    "author": "actions-rs-plus",
    "license": "MIT",
    "description": "Core functionality for the @actions-rs-plus repos",
    "main": "dist/core.js",
    "typings": "dist/core.d.ts",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "lint": "eslint src --ext=ts,tsx",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "clean": "rm -rf ./dist/* && rm tsconfig.tsbuildinfo && npm run build",
        "test": "jest --watchAll",
        "test:ci": "jest",
        "deps:ci": "depcruise --output-type err src",
        "deps:graph": "depcruise --output-type dot src | dot -T svg > dependency-graph.svg",
        "deps:report": "depcruise --output-type err-html --output-to dependency-report.html src",
        "postversion": "cp package.json package-lock.json ..",
        "release": "semantic-release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs-plus/core.git"
    },
    "bugs": {
        "url": "https://github.com/actions-rs-plus/core/issues"
    },
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "@types/node": "^18.17.15",
        "@types/semver": "^7.5.1",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "conventional-changelog-conventionalcommits": "^6.0.1",
        "dependency-cruiser": "^13.1.5",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "jest": "^29.6.4",
        "jest-junit": "^16.0.0",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "semantic-release": "^21.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run test:lint:fix",
            "depcruise --validate -- "
        ]
    },
    "dependencies": {
        "@actions/cache": "^3.2.2",
        "@actions/core": "^1.10.0",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^5.1.1",
        "@actions/http-client": "^2.1.1",
        "@actions/io": "^1.1.3",
        "@actions/tool-cache": "^2.0.1",
        "semver": "^7.5.4"
    }
}
